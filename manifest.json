{
  "name": "MyTaskList",
  "version": "0.9.0",
  "manifest_version": 2,
  "description": "Management my everyday's task lists.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "My Task List",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
    "matches": ["http://*/*"],
    "js": ["jquery.js","content.js"]
  } ],
  "background": {
    "scripts": [
      "jquery.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/"
  ]
} 
